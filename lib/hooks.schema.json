{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "NodeWebhook",
    "properties": {
        "hooks": {
            "type": "object",
            "description": "The hooks configuration",
            "additionalProperties": false,
            "patternProperties": {
                "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "forward": {
                            "type": "object",
                            "properties": {
                                "headers": {
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "anyOf": [
                                            {
                                                "type": "string"
                                            },
                                            {
                                                "enum": [
                                                    "content-type",
                                                    "content-length"
                                                ]
                                            }
                                        ]
                                    },
                                    "additionalItems": true
                                }
                            }
                        },
                        "execute": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "anyOf": [
                                    {
                                        "properties": {
                                            "type": {
                                                "enum": [
                                                    "request"
                                                ]
                                            },
                                            "endpoint": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    {
                                        "properties": {
                                            "type": {
                                                "enum": [
                                                    "script"
                                                ]
                                            },
                                            "location": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "required": [
                        "execute"
                    ]
                }
            }
        }
    },
    "required": [
        "hooks"
    ]
}
